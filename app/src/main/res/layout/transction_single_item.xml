<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/transction_image_id"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/image_background"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/money_bag" />

    <TextView
        android:id="@+id/transction_category_name_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Investment"
        android:textAlignment="center"
        android:textColor="@color/red"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/transction_image_id"
        app:layout_constraintTop_toTopOf="@+id/transction_image_id" />

    <TextView
        android:id="@+id/transction_account_name_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/account_background"
        android:padding="5dp"
        android:text="Cash"
        android:textAlignment="center"
        android:textColor="@color/red"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/transction_image_id"
        app:layout_constraintStart_toEndOf="@+id/transction_image_id"
        app:layout_constraintTop_toBottomOf="@+id/transction_category_name_id"
        app:layout_constraintVertical_bias="0.375" />

    <TextView
        android:id="@+id/transction_date_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="23/02/25"
        android:textAlignment="center"
        android:textColor="@color/Darkgreen"
        android:textSize="10sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/transction_account_name_id"
        app:layout_constraintStart_toEndOf="@+id/transction_account_name_id"
        app:layout_constraintTop_toTopOf="@+id/transction_account_name_id" />

    <TextView
        android:id="@+id/transction_amount_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="16dp"
        android:text="10000.00"
        android:textAlignment="center"
        android:textColor="@color/Darkgreen"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/transction_date_id"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/transction_date_id"
        app:layout_constraintTop_toTopOf="@+id/transction_category_name_id"
        app:layout_constraintVertical_bias="0.548" />
</androidx.constraintlayout.widget.ConstraintLayout>